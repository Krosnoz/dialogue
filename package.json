{
	"name": "dialogue",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "cd packages/db && bun run db:push",
		"db:studio": "cd packages/db && bun run db:studio",
		"db:generate": "cd packages/db && bun run db:generate",
		"db:reset": "cd packages/db && bun run db:reset",
		"db:reset-seed": "cd packages/db && bun run db:reset-seed",
		"db:branch": "cd packages/db && bun run db:branch"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"shx": "^0.4.0",
		"tsc-alias": "^1.8.16",
		"turbo": "^2.4.2",
		"typescript": "^5.8.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.2.8"
}
